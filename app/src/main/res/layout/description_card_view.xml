<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rectangle_2"
            app:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:autoSizeTextType="uniform"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/description"
            android:text="@string/error"
            android:fontFamily="@font/abeezee_regular"
            android:gravity="center_horizontal|top"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/rectangle_1"
            app:layout_constraintBottom_toBottomOf="@id/rectangle_1"
            app:layout_constraintEnd_toEndOf="@id/rectangle_1"
            app:layout_constraintTop_toTopOf="@id/rectangle_1" />

        <TextView
            android:id="@+id/enjoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enjoy"
            android:textAppearance="@style/description"
            android:fontFamily="@font/abeezee_regular"
            app:layout_constraintVertical_bias="0.55"
            app:layout_constraintStart_toStartOf="@id/text_description"
            app:layout_constraintBottom_toBottomOf="@id/rectangle_1"
            app:layout_constraintEnd_toEndOf="@id/text_description"
            app:layout_constraintTop_toTopOf="@id/text_description"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textAppearance="@style/description"
            android:fontFamily="@font/abeezee_italic"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_2"
            app:layout_constraintVertical_bias="1"
            app:backgroundTint="@color/so_light_green"
            app:layout_constraintStart_toStartOf="@id/enjoy"
            app:layout_constraintBottom_toBottomOf="@id/rectangle_1"
            app:layout_constraintEnd_toEndOf="@id/enjoy"
            app:layout_constraintTop_toTopOf="@id/enjoy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>