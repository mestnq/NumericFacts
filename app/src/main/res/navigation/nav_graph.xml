<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.numericfacts.ui.fragments.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.numericfacts.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chooseNumberFragment"
            app:destination="@id/chooseNumberFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chooseDateFragment"
            app:destination="@id/chooseDateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyListFragment"
            app:destination="@id/historyListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoritesListFragment"
            app:destination="@id/favoritesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.example.numericfacts.ui.fragments.DescriptionFragment"
        android:label="fragment_description"
        tools:layout="@layout/fragment_description" >
        <!--<action
            android:id="@+id/action_descriptionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />-->
        <action
            android:id="@+id/action_descriptionFragment_to_historyListFragment"
            app:destination="@id/historyListFragment" />
        <action
            android:id="@+id/action_descriptionFragment_to_favoritesListFragment"
            app:destination="@id/favoritesListFragment" />
        <argument
            android:name="text_description"
            app:argType="integer" />
           <!-- app:nullable="true"
            android:defaultValue="null"
            />-->
    </fragment>
    <fragment
        android:id="@+id/chooseNumberFragment"
        android:name="com.example.numericfacts.ui.fragments.ChooseNumberFragment"
        android:label="fragment_choose_number"
        tools:layout="@layout/fragment_choose_number" >
        <action
            android:id="@+id/action_chooseNumberFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <!--<action
            android:id="@+id/action_chooseNumberFragment_to_homeFragment"
            app:destination="@id/homeFragment" />-->
        <action
            android:id="@+id/action_chooseNumberFragment_to_historyListFragment"
            app:destination="@id/historyListFragment" />
        <action
            android:id="@+id/action_chooseNumberFragment_to_favoritesListFragment"
            app:destination="@id/favoritesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseDateFragment"
        android:name="com.example.numericfacts.ui.fragments.ChooseDateFragment"
        android:label="fragment_choose_date"
        tools:layout="@layout/fragment_choose_date" >
        <action
            android:id="@+id/action_chooseDateFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <!--<action
            android:id="@+id/action_chooseDateFragment_to_homeFragment"
            app:destination="@id/homeFragment" />-->
        <action
            android:id="@+id/action_chooseDateFragment_to_historyListFragment"
            app:destination="@id/historyListFragment" />
        <action
            android:id="@+id/action_chooseDateFragment_to_favoritesListFragment"
            app:destination="@id/favoritesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyListFragment"
        android:name="com.example.numericfacts.ui.fragments.HistoryListFragment"
        android:label="fragment_history_list"
        tools:layout="@layout/fragment_history_list" >
        <action
            android:id="@+id/action_historyListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_historyListFragment_to_favoritesListFragment"
            app:destination="@id/favoritesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.numericfacts.ui.fragments.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_historyListFragment"
            app:destination="@id/historyListFragment" />
        <action
            android:id="@+id/action_resultFragment_to_favoritesListFragment"
            app:destination="@id/favoritesListFragment" />
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesListFragment"
        android:name="com.example.numericfacts.ui.fragments.FavoritesListFragment"
        android:label="fragment_favorites_list"
        tools:layout="@layout/fragment_favorites_list" >
        <action
            android:id="@+id/action_favoritesListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>